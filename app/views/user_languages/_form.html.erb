<%= form_with model: @user_language do |f| %>
    <br>
    <br>
    <%= f.collection_select :language_id, Language.all, :id, :name %>
    <br>
    <%= f.label :why_learn, "Why do you wanna learn?" %><br>
    <%= f.text_area :why_learn %><br>
    <%= f.label :goals, "Your Goals:" %> <br>
    <%= f.text_area :goals %> <br>
    <%= f.label :time_spent, "Hours Spent"%> <br>
    <%= f.number_field :time_spent %> <br>
    <br>
     <%# <%= f.collection_select :user_id, User.all, :id, :name %> 
     <%= f.hidden_field :user_id %>
    <br>
    <br>
    <%= f.label :enjoying, "Enjoying?", value: false %> <br>
    <%= f.radio_button :enjoying, value = true %>
    <%= f.label :enjoying, "Yes" %>
    <%= f.radio_button :enjoying, value = false %>
    <%= f.label :enjoying, "No" %>
    <br>
        <br><br>

            <%= f.submit "Submit!" %>

        <br><br>
<% end %>

