<h1>LOG IN TO POLYGLOT</h1>

<%= form_with url: '/login' do |f| %>
  
    
    <%= f.label :username %>
    <%= f.text_field :username %><br>

        <br>
    
    <%= f.label :password %>
    <%= f.password_field :password %><br>

        <br><br>
    
    <%= f.submit "login" %>
<% end %>

