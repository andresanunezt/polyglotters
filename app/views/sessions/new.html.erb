<% if flash[:message]%>
<%= flash[:message]%>
<% end %>
<h1>LOG IN TO POLYGLOT</h1>
<h4>
<%= form_with url: '/login' do |f| %>
  
    
    <%= f.label :username %>
    <%= f.text_field :username %><br>

        <br>
    
    <%= f.label :password %>
    <%= f.password_field :password %><br>

        <br><br>
    
    <%= f.submit "login" %>
<% end %>
</h4>

<br>
<br>
<br>
<h4> OR </h4>

  <h4> <%= button_to "Log in with Google", '/auth/google_oauth2/'%> </h4>